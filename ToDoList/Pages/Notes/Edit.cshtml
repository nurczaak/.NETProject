@page
@model ToDoList.Pages.Notes.EditModel

<h1>Edit Note</h1>

<form method="post" asp-page-handler="OnPost">
    <input asp-for="Note.Id" type="hidden" />

    <div class="form-group">
        <label asp-for="Note.Title"></label>
        <input asp-for="Note.Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Note.Description"></label>
        <textarea asp-for="Note.Description" class="form-control" rows="4"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Note.Image"></label>
        <input asp-for="Note.Image" class="form-control" />
    </div>

    <input asp-for="Note.UserId" type="hidden" />

    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>

</div>
